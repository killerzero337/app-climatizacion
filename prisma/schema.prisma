// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String?   @unique
  password      String?
  emailVerified DateTime?
  image         String?
  role          String?   @default("USER") // o  ADMIN
  accounts      Account[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Proyecto {
  id               Int       @id @default(autoincrement())
  nombre           String
  localidad        String
  fecha            DateTime? @db.Date
  temp_ext_ver     Decimal?  @db.Decimal(4, 2)
  hr_ext_ver       Decimal?  @db.Decimal(3, 0)
  temp_ext_inv     Decimal?  @db.Decimal(4, 2)
  hr_ext_inv       Decimal?  @db.Decimal(3, 0)
  altitud          Decimal?  @db.Decimal(4, 2)
  zona_climatica   String?
  us_um            Decimal? @db.Decimal(4, 2)
  uc               Decimal? @db.Decimal(4, 2)
  ut_umd           Decimal? @db.Decimal(4, 2)
  uh               Decimal? @db.Decimal(4, 2)
  up               Decimal? @db.Decimal(4, 2)
  uph              Decimal? @db.Decimal(4, 2)
  upv              Decimal? @db.Decimal(4, 2)
  uphv             Decimal? @db.Decimal(4, 2)
  tph              Decimal? @db.Decimal(4, 2)
  tpv              Decimal? @db.Decimal(4, 2)
  tphv             Decimal? @db.Decimal(4, 2)
  numero_personas  Int?
  w_persona        Decimal? @db.Decimal(10, 2)
  caudales_ida     Decimal? @db.Decimal(10, 2)
  caudales_aire    Decimal? @db.Decimal(10, 2)
  tipo_lampara     String
  potencia_lampara Decimal? @db.Decimal(10, 2)
  valor_seguridad  Decimal? @db.Decimal(3, 0)
  comentarios      String?   @db.Text
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}
